/*--------------------------------------------billList----------------------------------------*/
.fr{
    float:right;
}

.fl{
    float:left;
}

#billBox{
    margin:0px;
}

.billItem{
    width: 100%;
    height: 6rem;
    border-bottom: 1px solid #a9a9a9;
    margin: 0px;
    background-color: #ffffff;
}

.billItemLeft{
    width:6rem;
    position:relative;
    float:left;
    height: 100%;
}

.billItemImg{
    height: 80%;
    width: 80%;
    border-radius: 8px;
    margin-top: 10%;
    margin-left: 10%;
}

.finishMark{
    height: 80%;
    width: 80%;
    border-radius: 8px;
    margin-left: 10%;
    margin-top: -84%;
    background-color: #000;
    opacity: 0.6;
    color: #fff;
    font-size: 12px;
    text-align: center;
    line-height: 78px;
    z-index: 2;
}

.billItemRight{
    width:100%;
    position:relative;
    float:right;
    height: 100%;
    text-indent: 2%;
    margin-left: -6rem;
    margin-right: 0rem;
}

.billItemRightContainer{
    position: relative;
    margin-left: 6rem;
    margin-right: 0;
}

.billItemDesTitle{
    font-size:1rem;
    width: 100%;
    margin-top: 0.4rem;

}

.billItemDesReduce{
    font-size: 0.8rem;
    width: 100%;
    color: #666;
}

.billItemDesRemain{
    font-size:0.8rem;
    width:100%;
    color:#FF0000;
}

.billItemDesGot{
    width: 100%;
    color: #999;
}

.billItemDesSalePrice{
    font-size:1rem;
    color:#e8ae26;
}

.billItemDesOriginPrice{
    font-size:0.8rem;
    color:#999;
    text-decoration: line-through;
}

.billItemDesGotR{
    font-size:0.8rem;
    float: right;
    padding-right: 4%;
}

.backTopBox{
    position: fixed;
    bottom: 0.2rem;
    right: 0.1rem;
    display: none;
}

.backTopImg{
    height: 3.8rem;
}

.loadingMore{
    width: 100%;
    line-height: 3rem;
    text-align: center;
    font-size: 1rem;
}

/*----------------------------------------billDetail----------------------------------------*/
.container{
    width: 100%;
    color: #333333;
    background-color: #efeff4;
    margin: 0px;
    font-size: 16px;
}

.buttonArea{
    width: 90%;
    height: 2.3rem;
    padding-top: 1rem;
    padding-bottom: 2.5rem;
    text-align: center;
    background: white;
    padding-left:5%;
    padding-right:5%;
}

.getButton{
    display: inline-block;
    width: 90%;
    text-align: center;
    text-decoration: none;
    height: 2.6rem;
    color: #fff;
    font-size: 1.3rem;
    background-color: #e8ae26;
    border: 1px solid #c7b271;
    border-radius: 6px;
}

.servicePromise{
    text-align: left;
    font-size: 0.9rem;
    padding: 0.6rem 0rem;
}

.servicePromiseImg{
    height:0.8rem;
    width:0.8rem;
    padding-right:0.2rem;
}

.waveArea{
    height: 11px;
    background: url(../../images/icons/bg-wave.png) 0 -3px repeat-x;
    -webkit-background-size: 12px 8px;
    background-size: 13px 12px;
}

.detailTitle{
    margin: 16px 0px 0px;
    padding: 12px 0 12px 16px;
    font-size: 0.8rem;
    color: #292929;
    border-top: 1px solid #d4d4d4;
    background-color: #ffffff;
}

.detailTitleLink{
    margin: 16px 0px 0px;
    padding: 10px 0 36px 16px;
    font-size: 0.8rem;
    color: #292929;
    border-top: 1px solid #d4d4d4;
    background-color: #ffffff;
}

.textAreaBox{
    border-bottom: 1px solid #d4d4d4;
    background-color: #fff;
}

.textArea{
    padding: 12px 10px 12px 0px;
    font-size: 0.8rem;
    color: #666;
    margin-left: 16px;
    position: relative;
    border-top: 1px solid #d4d4d4;
}

.icon-arrow-blue{
    display: inline-block;
    width: 0.6rem;
    height: 1rem;
    background-size: 10px,5px;
    float: right;
    position: relative;
    padding-left: 9px;
    margin-left: 5px;
    padding-right:9px;
}

.titleName{
    width: 60%;
    float: left;
}

.titleLink{
    position: relative;
    float: right;
    width: 7rem;
    margin-left: 0;
    font-size: 0.8rem;
    color: #0194fb;
    text-align: right;
}

.iconLinkItemBox{
    background-color: #fff;
}

.iconLinkItem{
    padding: 12px 10px 12px 0px;
    font-size: 0.8rem;
    color: #666;
    margin-left: 16px;
    position: relative;
    border-top: 1px solid #d4d4d4;
}

.iconLinkItemIcon{
    position: relative;
    float: left;
    width: 1rem;
    height: 1rem;
}

.iconLinkItemInfo{
    margin-left:5px;
}

.icon-arrow-gray{
    display: inline-block;
    width:0.6rem;
    height:1rem;
    background-size: 10px,5px;
    float: right;
    position: relative;
    padding-left: 0px;
}

.bottomLine{
    border-bottom: 1px solid #d4d4d4;
}

.commentTitle{
    padding: 12px 0 12px 16px;
    font-size: 0.8rem;
    color: #292929;
    background-color: #ffffff;
}

.commentItem{
    background-color: #fff;
}

.commentFirstLine{
    margin: 0px 0px 5px 15px;
    border-top: 1px solid #d4d4d4;
    padding: 4px 0px 4px 0px;
}

.commentInfo{
    display: inline-block;
    vertical-align: baseline;
    zoom: 1;
    font-size: 13px;
    line-height: 19px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #999;
}

.commentStar{
    position: relative;
    float: right;
    width: 80px;
    margin-left: 0;
    margin-right: 1rem;
}

.commentDetail{
    margin-right: 16px;
    font-size: 13px;
    color: #666;
    line-height: 16px;
    word-break: break-all;
    word-wrap: break-word;
    margin-left: 16px;
    padding-bottom: 20px;
}

.eachStar{
    width: 13px;
    height:13px;
}