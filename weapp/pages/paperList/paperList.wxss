/*--------------------------------------------billList----------------------------------------*/
.fr{
    float:right;
}

.fl{
    float:left;
}

#billBox{
    margin:0px;
}

.billItem{
    width: 100%;
    height: 6rem;
    border-bottom: 1px solid #a9a9a9;
    margin: 0px;
    background-color: #ffffff;
}

.billItemLeft{
    width:6rem;
    position:relative;
    float:left;
    height: 100%;
}

.billItemImg{
    height: 80%;
    width: 80%;
    border-radius: 8px;
    margin-top: 10%;
    margin-left: 10%;
}

.finishMark{
    height: 80%;
    width: 80%;
    border-radius: 8px;
    margin-left: 10%;
    margin-top: -84%;
    background-color: #000;
    opacity: 0.6;
    color: #fff;
    font-size: 12px;
    text-align: center;
    line-height: 78px;
    z-index: 2;
}

.billItemRight{
    width:100%;
    position:relative;
    float:right;
    height: 100%;
    text-indent: 2%;
    margin-left: -6rem;
    margin-right: 0rem;
}

.billItemRightContainer{
    position: relative;
    margin-left: 6rem;
    margin-right: 0;
}

.billItemDesTitle{
    font-size:1rem;
    width: 100%;
    margin-top: 0.4rem;

}

.billItemDesReduce{
    font-size: 0.8rem;
    width: 100%;
    color: #666;
}

.billItemDesRemain{
    font-size:0.8rem;
    width:100%;
    color:#FF0000;
}

.billItemDesGot{
    width: 100%;
    color: #999;
}

.billItemDesSalePrice{
    font-size:1rem;
    color:#e8ae26;
}

.billItemDesOriginPrice{
    font-size:0.8rem;
    color:#999;
    text-decoration: line-through;
}

.billItemDesGotR{
    font-size:0.8rem;
    float: right;
    padding-right: 4%;
}

.backTopBox{
    position: fixed;
    bottom: 0.2rem;
    right: 0.1rem;
    display: none;
}

.backTopImg{
    height: 3.8rem;
}

.loadingMore{
    width: 100%;
    line-height: 3rem;
    text-align: center;
    font-size: 1rem;
}