.paperItem{
    width: 100%;
    height: 6rem;
    border-bottom: 1px solid #a9a9a9;
    margin: 0px;
    background-color: #ffffff;
    font-size:1rem;
    text-indent: 10px;
    text-align:center;
}

.titleItem{
    font-weight: bold;
    width:100%;
    padding-top:0.4rem;
    padding-bottom:0.4rem;
    background-color: #E0E0E0;
}

.itemDetail{
    width:100%;
    font-size: 0.8rem;
    color:#666666;
}

.subTitle{
    width:100%;
    float:left;
    padding-top: 8px;
}

.author{
    width:100%;
    float:left;
    font-weight: bold;
    padding-top:8px;
}

.textAreaBox{
    width:94%;
    padding-left:3%;
    padding-right:3%;
}

.paragraph{
    font-size:0.8rem;
    color:#666666;
    padding-top:8px;
    padding-bottom:8px;
}
